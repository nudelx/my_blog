<%= render('shared/errors' , obj: @user)  %>

<div class="row">
	<div class="col-md-12">
		<%= form_for(@user, :html => {class: "form-horizontal" , role: "form" }) do |d| %>
		<div class="form-group">
			<div class="control-label col-sm-2">
				<%= d.label :username %>
			</div>
			<div class="col-sm-8">
				<%= d.text_field :username , class: "form-control", placeholder: "Please enter username" , autofocus: true %>
			</div>
		</div>
		
		<div class="form-group">
			<div class="control-label col-sm-2">
				<%= d.label :email%>
			</div>
			<div class="col-sm-8">
				<%= d.email_field :email, class: "form-control", placeholder: "Enter Email", rows:10 %>
			</div>
		</div>

		<div class="form-group">
			<div class="control-label col-sm-2">
				<%= d.label :password%>
			</div>
			<div class="col-sm-8">
				<%= d.password_field :password, class: "form-control", placeholder: "Enter password", rows:10 %>
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-4">
				<%= d.submit class: 'btn btn-primary btn-large'%>
			</div>
		</div> 
		<% end %>
		<div class="col-xs-4 col-xs-offset-4">
			
		</div>
		
	</div>
</div>