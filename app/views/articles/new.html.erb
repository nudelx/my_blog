<h1>Create an Article</h1>
<% if @article.errors.any? %>
	<ul>
		<% @article.errors.full_messages.each do |msg| %>
			<li><%= msg%></li>
		<% end %> 
	</ul>
<% end %>

<%= form_for @article  do |d| %>
	<ul>
		<p>
			<%= d.label :title%> <br>
			<%= d.text_field :title%>
		</p>

		<p>
			<%= d.label :description%><br>
			<%= d.text_area :description %>
		</p>

		<p>
			<%= d.submit%>
		</p>
	</ul>
<% end %>