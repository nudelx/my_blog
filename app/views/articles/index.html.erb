<h1 style="margin-bottom: 30px" >All articles</h1>
 <div class="row">
	 <% @articles.each do |article| %>
		<div class="box">
		 	<div class="well well-lg">
		 		<div class="article-title">
		 			 <%= link_to article.title, article_path(article) %> 
		 		</div>	 		
		 		<div class="article-body">
		 			 <%= truncate(article.description, length:100) %> 
		 			 <% if article.user %>
		 			 <div class="article-meta-details">
				 			 <small>
				 			 				<span> author: <%= article.user.username %> </span>
				 			 				<span> created:    <%= time_ago_in_words(article.created_at) %> ago </span>
				 			 				<span> updated:    <%= time_ago_in_words(article.updated_at) %> ago </span>
				 			 </small>
		 			 </div>
		 			 <% end %>
		 		</div>	

		 		<div class="btn-holder ">
					<%= link_to "Edit" ,  edit_article_path(article) , class: "btn btn-xs btn-primary" %> 
					<%= link_to "Delete" , articles_path(article) , method: :delete, data: {confirm: "Are you shure" } ,class: "btn btn-xs btn-danger" %>
				</div> 		
		 		
		 </div>
	</div>
<% end %>
</div>

