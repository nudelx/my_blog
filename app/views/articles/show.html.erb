<h2 style="text-align: center; margin-bottom: 40px;"> <%= @article.title %></h2>

<div class="well col-xs-8 col-xs-offset-2">
	<h4 ><strong>Description:</strong> </h4>
	<hr>
	<%= simple_format(@article.description) %>


<div class="btn-holder">
	<%= link_to "Edit" ,  edit_article_path(@article) , class: "btn btn-xs btn-primary" %> 
	<%= link_to "Back" ,  articles_path , class: "btn btn-xs btn-success" %>
	<%= link_to "Delete" , articles_path(@article) , method: :delete, data: {confirm: "Are you shure" } ,class: "btn btn-xs btn-danger" %>
</div>

</div>
