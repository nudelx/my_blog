<%= render('shared/errors' , obj: @article)  %>
<div class="row">
	<div class="col-md-12">
		<%= form_for(@article, :html => {class: "form-horizontal" , role: "form" }) do |d| %>
		<div class="form-group">
			<div class="control-label col-sm-2">
				<%= d.label :title%>
			</div>
			<div class="col-sm-8">
				<%= d.text_field :title , class: "form-control", placeholder: "Title of acrticle" , autofocus: true %>
			</div>
		</div>
		
		<div class="form-group">
			<div class="control-label col-sm-2">
				<%= d.label :description%>
			</div>
			<div class="col-sm-8">
				<%= d.text_area :description, class: "form-control", placeholder: "Body of acrticle", rows:10 %>
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-4">
				<%= d.submit class: 'btn btn-primary btn-large'%>
			</div>
		</div>
		<% end %>
		<div class="col-xs-4 col-xs-offset-4">
			[ <%= link_to "Cancel request and return to article listing" , articles_path %> ]
		</div>
		
	</div>
</div>